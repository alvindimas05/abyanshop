<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/orange"
    android:paddingVertical="20dp"
    android:paddingHorizontal="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:id="@+id/pembelian_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/tes" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:padding="5dp"
        android:textColor="@color/black"
        android:text="Pengangguran Simulator"
        android:textSize="30sp" />
    <LinearLayout
        android:id="@+id/pembelian_inputs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:fontFamily="@font/poppins_medium"
            android:padding="5dp"
            android:textColor="@color/black"
            android:text="Jumlah"
            android:textSize="15sp" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7">
            <Spinner
                android:id="@+id/pembelian_produk"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#FFF"
                android:layout_weight="1"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:fontFamily="@font/poppins_medium"
            android:padding="5dp"
            android:text="Harga"
            android:textColor="@color/black"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/pembelian_harga"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="10"
            android:background="#FFF"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_medium"
            android:padding="8dp" />
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:cornerRadius="5dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/orangebutton"
        android:layout_gravity="right"
        android:onClick="onBeli"
        android:text="Pesan Sekarang" />
</LinearLayout>